<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>QuickHire Freelance Platform</display-name>
    
    <!-- Welcome Files -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
    <!-- Session Configuration -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    
    <!-- Error Pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/error/404.jsp</location>
    </error-page>
    
    <error-page>
        <error-code>500</error-code>
        <location>/error/500.jsp</location>
    </error-page>
    
    <!-- Security Constraints -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Secure Content</web-resource-name>
            <url-pattern>/dashboard-admin</url-pattern>
            <url-pattern>/admin/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>ADMIN</role-name>
        </auth-constraint>
    </security-constraint>
    
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Company Content</web-resource-name>
            <url-pattern>/dashboard-company</url-pattern>
            <url-pattern>/jobs/create</url-pattern>
            <url-pattern>/jobs/edit/*</url-pattern>
            <url-pattern>/jobs/close/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>COMPANY</role-name>
        </auth-constraint>
    </security-constraint>
    
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Freelancer Content</web-resource-name>
            <url-pattern>/dashboard-freelancer</url-pattern>
            <url-pattern>/applications/create/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>FREELANCER</role-name>
        </auth-constraint>
    </security-constraint>
</web-app>
