modules = ["java", "java-17", "postgresql-16", "nodejs-20"]

[nix]
channel = "stable-24_05"
packages = ["jdk17", "maven"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "QuickHire Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "QuickHire Node Server"

[[workflows.workflow]]
name = "QuickHire Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./run.sh"
waitForPort = 5000

[[workflows.workflow]]
name = "QuickHire Node Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node server.js"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "java -cp \"$(mvn dependency:build-classpath -Dmdep.outputFile=/dev/stdout -q):target/classes\" com.quickhire.StaticServer"]

[[ports]]
localPort = 5000
externalPort = 80
