modules = ["java", "java-17"]

[nix]
channel = "stable-24_05"
packages = ["jdk17", "maven"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "QuickHire Web Server"

[[workflows.workflow]]
name = "QuickHire Web Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mvn clean compile && java -cp target/classes:$(mvn dependency:build-classpath -Dmdep.outputFile=/dev/stdout -q) com.quickhire.JettyServer"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "mvn clean compile && java -cp target/classes:$(mvn dependency:build-classpath -Dmdep.outputFile=/dev/stdout -q) com.quickhire.JettyServer"]

[[ports]]
localPort = 5000
externalPort = 80
