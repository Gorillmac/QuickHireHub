modules = ["java", "java-17", "postgresql-16"]

[nix]
channel = "stable-24_05"
packages = ["jdk17", "maven"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "QuickHire Web Server"

[[workflows.workflow]]
name = "QuickHire Web Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "java -cp \"$(mvn dependency:build-classpath -Dmdep.outputFile=/dev/stdout -q):src/main/java\" com.quickhire.StaticServer"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "java -cp \"$(mvn dependency:build-classpath -Dmdep.outputFile=/dev/stdout -q):src/main/java\" com.quickhire.StaticServer"]

[[ports]]
localPort = 5000
externalPort = 80
