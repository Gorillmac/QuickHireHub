modules = ["java", "java-17", "postgresql-16", "nodejs-20"]

[nix]
channel = "stable-24_05"
packages = ["jdk17", "maven"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Static Web Server"

[[workflows.workflow]]
name = "Static Web Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx http-server src/main/webapp -p 5000 --cors"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "java -cp \"$(mvn dependency:build-classpath -Dmdep.outputFile=/dev/stdout -q):target/classes\" com.quickhire.StaticServer"]

[[ports]]
localPort = 5000
externalPort = 80
